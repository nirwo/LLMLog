<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jenkins Log Analyzer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>
<body class="bg-dark">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary mb-4">
        <div class="container">
            <a class="navbar-brand" href="/"><i class="bi bi-journal-text"></i> Jenkins Log Analyzer</a>
            <button class="btn btn-outline-light ms-auto" onclick="toggleTheme()">
                <i class="bi bi-moon-stars"></i>
            </button>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="card bg-dark-subtle mb-4">
                    <div class="card-body">
                        <ul class="nav nav-tabs" id="inputTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="file-tab" data-bs-toggle="tab" data-bs-target="#file" type="button" role="tab">
                                    <i class="bi bi-file-text"></i> File Upload
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="url-tab" data-bs-toggle="tab" data-bs-target="#url" type="button" role="tab">
                                    <i class="bi bi-link"></i> Jenkins URL
                                </button>
                            </li>
                        </ul>
                        
                        <div class="tab-content mt-3" id="inputTabsContent">
                            <div class="tab-pane fade show active" id="file" role="tabpanel">
                                <form id="uploadForm" enctype="multipart/form-data">
                                    <div class="mb-3">
                                        <label for="logFile" class="form-label">Select Jenkins log file</label>
                                        <input type="file" class="form-control" id="logFile" name="file" accept=".log,.txt">
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-search"></i> Analyze Log
                                    </button>
                                </form>
                            </div>
                            <div class="tab-pane fade" id="url" role="tabpanel">
                                <form id="urlForm">
                                    <div class="mb-3">
                                        <label for="logUrl" class="form-label">Enter Jenkins log URL</label>
                                        <input type="url" class="form-control" id="logUrl" name="url" placeholder="https://jenkins.example.com/job/...">
                                    </div>
                                    <div class="mb-3 form-check">
                                        <input type="checkbox" class="form-check-input" id="skipSslVerify" name="skipSslVerify">
                                        <label class="form-check-label" for="skipSslVerify">Skip SSL verification (use for self-signed certificates)</label>
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-search"></i> Analyze Log
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="results" class="card bg-dark-subtle d-none">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Analysis Results</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <canvas id="errorChart"></canvas>
                            </div>
                            <div class="col-md-6">
                                <h6>Critical Lines</h6>
                                <div id="criticalLines" class="critical-lines-container"></div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- LLM Analysis Section -->
                <div id="llmAnalysisSection" class="card bg-dark-subtle mt-4 ai-analysis-card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0"><i class="bi bi-robot"></i> AI Error Analysis</h5>
                            <div id="llmStatusIndicator">
                                <span class="badge bg-secondary" id="llmStatusBadge">Checking LLM status...</span>
                                <button class="btn btn-sm btn-outline-secondary ms-2" id="refreshLlmStatusBtn">
                                    <i class="bi bi-arrow-repeat"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="llmContent">
                            <div class="text-center py-4" id="llmPlaceholder">
                                <i class="bi bi-robot fs-2 text-muted"></i>
                                <p class="mt-3">Click on any error line to get AI-powered analysis and suggestions</p>
                            </div>
                            <div id="llmLoader" class="text-center p-4" style="display: none;">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p class="mt-2 loading-animation">Analyzing with AI...</p>
                            </div>
                            <div id="llmAnalysisResult" class="d-none">
                                <div class="analysis-section" id="errorSummarySection">
                                    <h6><i class="bi bi-exclamation-triangle-fill text-danger"></i> Error Summary</h6>
                                    <div class="analysis-content" id="errorSummary"></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="analysis-section" id="possibleCausesSection">
                                            <h6><i class="bi bi-lightbulb-fill text-warning"></i> Possible Causes</h6>
                                            <div class="analysis-content">
                                                <ul id="possibleCauses" class="list-group"></ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="analysis-section" id="suggestedFixesSection">
                                            <h6><i class="bi bi-tools text-primary"></i> Suggested Fixes</h6>
                                            <div class="analysis-content">
                                                <ul id="suggestedFixes" class="list-group"></ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-2 text-end">
                                    <small class="text-muted">AI confidence: <span id="aiConfidence">0%</span></small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card bg-dark-subtle h-100">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0"><i class="bi bi-clock-history"></i> Analysis History</h5>
                            <button class="btn btn-sm btn-outline-secondary" id="refreshHistoryBtn">
                                <i class="bi bi-arrow-repeat"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div id="logHistory" class="history-container"></div>
                        <div id="historyEmpty" class="text-center p-4" style="display: none;">
                            <i class="bi bi-hourglass text-muted fs-1 mb-3"></i>
                            <p class="text-muted">No analysis history yet</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="{{ url_for('static', filename='main.js') }}"></script>
</body>
</html>
